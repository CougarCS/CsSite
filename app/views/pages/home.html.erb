<div class="header_bottom">
	<div class="container">
		<h1><%= link_to "Cougar CS", root_path %>
		</h1> 
	</div>
</div>

<div class="row image_container">
  <div class="container">
  	 <div class="content_top">
		<div class="col-md-3">
		  <div class="box_1">
		   <div class="inner_row">
		   		<%= link_to pages_tutoring_path do %>
				   	<i class="fa fa-fa-clock-o fa-clock-o icon_1"> </i>
				   	<span class="glyphicon glyphicon-book icon_1" aria-hidden="true"></span>
					<h3>Tutoring<br>Workshops</h3>
				<% end %>
		   </div>
		  </div>
		</div>
		<div class="col-md-3">
		  <div class="box_1">
		  	<%= link_to "http://uhcode.red/" do %>
			   <div class="inner_row">
				 <span class="glyphicon glyphicon-heart-empty icon_1" aria-hidden="true"></span>
				 <h3>CodeRed Hackathon</h3>
			   </div>
			<% end %>
		  </div>
		</div>
		<div class="col-md-3">
		  <div class="box_1">
		  <%= link_to new_member_registration_path do %>
		   <div class="inner_row">
			 <span class="glyphicon glyphicon-user icon_1" aria-hidden="true"></span>
			 <h3>Join us</h3>
		   </div>
		   <% end %>
		  </div>
		</div>
		<div class="col-md-3">
		  <div class="box_1">
		   <div class="inner_row">
		   		<%= link_to pages_career_path do %>
				   	<i class="fa fa-fa-clock-o fa-clock-o icon_1"> </i>
				   	<span class="glyphicon glyphicon-bullhorn icon_1" aria-hidden="true"></span>
					<h3>Career Fair</h3>
				<% end %>
		   </div>
		  </div>
		</div>
		<div class="clearfix"> </div>
	 </div>
  </div>
</div>


<div class="row image_container">
	<%= image_tag("banner2.jpg", class:"col-xs-4 first_image" ) %>
	<%= image_tag("banner1.jpg", class:"col-xs-4" ) %>
	<%= image_tag("banner3.jpg", class:"col-xs-4 last_image" ) %>
</div>

<div class="container">
	<div class="column_3">
	<div class="col-xs-6 grid_1">
		<h2>UPCOMING EVENTS</h2>
	</div>
	</div>
<table class="table table-bordered">

<% @events.each_with_index do |event, i| %>
	<% if i.even? %>
		<tr>
	<% end %>
		<td>
		<h2><%= event.title %></h2>
		<h4><%= event.date %></h4>
		<p><%= event.content %></p>
		</td>
	<%  if i.odd? %>
		</tr>
	<% end %>

<% end %>
</table>
</div>


<div class="footer">
	<div class="container">
	    <ul class="socials">
            <li><a href="https://www.facebook.com/cougarcs?fref=ts"><i class="fa fb fa-facebook"></i></a></li>
        </ul>
	</div>
</div>